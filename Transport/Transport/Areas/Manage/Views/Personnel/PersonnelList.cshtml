@using PagedList.Mvc
@model PagedList.IPagedList<Transport.Areas.Manage.Models.PersonnelView>

<table class="table table-striped table-hover">
    <thead class="text-primary">
        <tr>
            <th>
                نام
            </th>
            <th>
                کد پرسنلی
            <th>
                تلفن همراه
            </th>
            <th>
                جنسیت
            </th>
            <th>
                تلفن ثابت
            </th>
            <th>
                ایمیل
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonnelCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CellPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="icon-tool">
                @Html.ActionLink("  ", "Create", new { id = item.Id }, new { @class = "btn btn-success fa fa-pencil-square-o text-info" })

                @Html.ActionLink("  ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-times text-danger" })
            </td>
        </tr>
    }
</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { pageNumber = page }))
