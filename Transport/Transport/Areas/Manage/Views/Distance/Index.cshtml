@model IEnumerable<Transport.Areas.Manage.Models.DistanceViewIndex>
@{
    ViewBag.Title = "لیست مسافت";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        
        <div id="PersonnelList">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @Html.ActionLink("ایجاد مسافت ", "Create", null, new { @class = "btn btn-danger btn-md fa fa-plus-circle text-btn " })
                    </div>
                    <div class="panel-body">
                        <div class="row" id="card-table">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header" data-background-color="purple">
                                        <h4 class="title">مسافت ها </h4>
                                        <p class="category">لیست مسافت ها</p>
                                    </div>
                                    <div id="PersonnelList" class="card-content table-responsive">

                                        <table class="table table-striped table-hover">
                                            <thead class="text-primary">
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.kilometer)
                                                    </th>

                                                    <th></th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.kilometer)
                                                        </td>

                                                        <td class="icon-tool">
                                                            @Html.ActionLink("  ", "create", new { id = item.Id }, new { @class = "btn btn-success fa fa-pencil-square-o text-info" })
                                                            @*@Html.ActionLink("  ", "Details", new { id = item.DriverId }, new { @class = "btn btn-info fa fa-reply text-success" } ) *@
                                                            @Html.ActionLink("  ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-times text-danger" })
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


