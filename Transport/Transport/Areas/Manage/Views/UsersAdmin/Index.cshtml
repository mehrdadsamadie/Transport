@model IEnumerable<Transport.Models.ApplicationUser>

@{
    ViewBag.Title = "لیست کاربران";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div id="PersonnelList">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading" id="toolbar">
                        @Html.ActionLink("ایجاد کاربر جدید", "Create", null, new { @class = "btn btn-danger btn-md fa fa-plus-circle text-btn " })
                    </div>
                    <div class="panel-body">
                        <div id="card-table">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header" data-background-color="purple">
                                        <h4 class="title">کاربران </h4>
                                        <p class="category">لیست افراد عضو در سایت </p>
                                    </div>
                                    <div class="card-content table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        نام کاربری
                                                    </th>
                                                    <th>

                                                    </th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var item in Model)
            {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.UserName)
                                                        </td>
                                                        <td class="icon-tool">
                                                            @Html.ActionLink("  ", "Edit", new { id = item.Id }, new { @class = "btn btn-success fa fa-pencil-square-o text-info" })
                                                            @Html.ActionLink("  ", "Details", new { id = item.Id }, new { @class = "btn btn-info fa fa-reply text-success" })
                                                            @Html.ActionLink("  ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-times text-danger" })
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>


                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
