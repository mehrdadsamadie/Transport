@using PagedList.Mvc
@model PagedList.IPagedList<Transport.Areas.Manage.Models.FactoryUserManagerViewIndex>

<table class="table table-striped table-hover">
    <thead class="text-primary">
        <tr>
            <th>
                نام
            </th>
            <th>
                واحد کارخانه
            </th>

            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="icon-tool">
                @Html.ActionLink("  ", "create", new { id = item.Id }, new { @class = "btn btn-success fa fa-pencil-square-o text-info" })
                @*@Html.ActionLink("  ", "Details", new { id = item.DriverId }, new { @class = "btn btn-info fa fa-reply text-success" } ) *@
                @Html.ActionLink("  ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-times text-danger" })

            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { pageNumber = page }))