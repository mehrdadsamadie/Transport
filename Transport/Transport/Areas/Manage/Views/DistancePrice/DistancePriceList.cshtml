            @Html.DisplayFor(modelItem => item.DriverTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PathList)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DriverTypeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
