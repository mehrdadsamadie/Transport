@using PagedList.Mvc
@model PagedList.IPagedList<Transport.Areas.Manage.Models.DelayPriceViewIndex>

<table class="table table-striped table-hover">
    <thead class="text-primary">
        <tr>

            <th>
                نوع راننده
            </th>
            <th>
                قیمت
            </th>
            <th>
                زمان
            </th>
            <th>
                تاریخ شروع
            </th>
            <th>
                تاریخ پایان
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.DriverTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DelayTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td class="icon-tool">
                @Html.ActionLink(" ", "Create", new { id = item.Id }, new { @class = "btn btn-success fa fa-pencil-square-o text-info" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-times text-danger" })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { pageNumber = page }))