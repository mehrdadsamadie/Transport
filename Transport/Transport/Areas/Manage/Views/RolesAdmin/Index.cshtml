@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "مدیریت نقش ها";
}
<div class="content">
    <div class="container-fluid">

        <div id="PersonnelList">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @Html.ActionLink("ایجاد نقش جدید", "Create", null, new { @class = "btn btn-danger btn-md fa fa-plus-circle text-btn " })
                    </div>
                    <div class="panel-body">
                        <div id="card-table">
                            <div class="col-md-12">
                                <div class="card">
                                    <div class="card-header" data-background-color="purple">
                                        <h4 class="title">رانندگان </h4>
                                        <p class="category">لیست افراد راننده شرکت</p>
                                    </div>
                                    <div class="card-content table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead class="text-primary">
                                                <tr>
                                                    <th>
                                                        نام نقش
                                                    </th>
                                                    <th>

                                                    </th>
                                                </tr>
                                            </thead>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td class="icon-tool">
                                                        @Html.ActionLink("  ", "Edit", new { id = item.Id }, new { @class = "btn btn-success fa fa-pencil-square-o text-info" })
                                                        @Html.ActionLink("  ", "Details", new { id = item.Id }, new { @class = "btn btn-info fa fa-reply text-success" })
                                                        @Html.ActionLink("  ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-times text-danger" })
                                                    </td>
                                                </tr>
                                            }

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
